rule "10 - Set random wifi variations"
when
    System started or
    Time cron "/20 * * * * ?"
then
    postUpdate(Wifi_Level, (Math :: random * 4.0).intValue)

end

rule "9 - Records last weather update time"
when
    Item Wifi_Level received update
then
    postUpdate(Weather_LastUpdate, new DateTimeType ())

end