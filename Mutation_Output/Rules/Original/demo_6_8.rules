rule "11 - Set random image URLs"
when
    Time cron "/10 * * * * ?"
then
    val url = urlList.get(random.nextInt(urlList.length))
    val res = resList.get(random.nextInt(resList.length))

    postUpdate(ImageURL, url + "/" + res)
end

